# theme = Xcode Dark
# font-family = SF Mono

theme = Flexoki Dark
font-family = JetBrains Mono

background-opacity = 1.0
background-blur-radius = 20
keybind = shift+enter=text:\x1b\r

# Enable desktop notifications when commands finish in the background
desktop-notifications = true

# Enable shell integration (needed for notifications)
shell-integration = detect
shell-integration-features = cursor,sudo,title

# Visual bell for tab indicators
window-decoration = true

# Window size (columns x rows)
window-width = 120
window-height = 35

# No quit confirmation
confirm-close-surface = false

# Symmetric padding for status bar alignment
window-padding-x = 2,2
window-padding-balance = true
